{
  "version": 2,
  "functions": {
    "api/index.js": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "rewrites": [{ "source": "/(.*)", "destination": "/api" }],
  "buildCommand": "npm run build",
  "devCommand": "npm --prefix server run server --port 3000",
  "installCommand": "npm install && npm --prefix server install",
  "outputDirectory": "dist"
}
